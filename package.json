{
  "name": "ai-mastery-doctor",
  "version": "1.0.0",
  "description": "AI Mastery tutoring system with The Doctor (EMH) persona teaching Stable Diffusion concepts",
  "main": "main.js",
  "homepage": ".",
  "author": {
    "name": "Captain Tal",
    "email": "captain@starfleet.academy"
  },
  "license": "MIT",
  "keywords": [
    "ai",
    "stable-diffusion",
    "education",
    "tutoring",
    "star-trek",
    "electron",
    "node.js",
    "doctor",
    "emh",
    "learning",
    "comics",
    "ai-art",
    "hologram",
    "voyager"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"nodemon server/server.js\" \"wait-on http://localhost:3001 && electron .\"",
    "server": "node server/server.js",
    "server:dev": "cross-env NODE_ENV=development nodemon server/server.js",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "jest",
    "lint": "eslint .",
    "setup": "node scripts/setup-dev.js",
    "doctor": "node scripts/doctor-check.js",
    "portable": "node scripts/create-portable.js",
    "update-curriculum": "node scripts/update-curriculum.js",
    "clean": "rimraf dist/ temp/ logs/ node_modules/.cache/",
    "reset": "npm run clean && npm install"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "openai": "^4.24.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.captaintal.ai-mastery-doctor",
    "productName": "AI Mastery: The Doctor",
    "description": "Emergency Medical Hologram Educational System for Stable Diffusion Training",
    "copyright": "Copyright Â© 2025 Captain Tal",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/electron",
      "!.env",
      "!*.log",
      "!dist",
      "!build",
      "!.git"
    ],
    "extraFiles": [
      {
        "from": ".env.example",
        "to": ".env.example"
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Captain Tal",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI Mastery: The Doctor"
    },
    "publish": null
  }
}